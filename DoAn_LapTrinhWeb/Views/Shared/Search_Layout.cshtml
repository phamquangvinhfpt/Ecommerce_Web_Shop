<style>
*{
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  font-family: 'Poppins', sans-serif;
}

body{
  background:#f5f5f5;
}

::selection{
  color:  #4da6ff;
  background:  #000;
}

..search-input{
 transform-origin: 100%;
  width: 100%;
  border-radius: 5px;
  position: relative;
  box-shadow: 25px 25px 50px rgba(9,148,255,0.25),
  -10px -10px 30px rgba(9,148,255,0.1),
  inset -5px -5px 15px rgba(95, 183, 251, 0.5);
}

.search-input input{
  height: 55px;
  width: 100%;
  outline: none;
  border: none;
  border-radius: 5px;
  padding: 0 60px 0 20px;
  font-size: 18px;
  box-shadow: 0px 1px 5px rgba(10, 10, 10, 0.1);
}

.search-input.active input{
  border-radius: 5px 5px 0 0;
}

.search-input .autocom-box{
  padding: 0;
  opacity: 0;
  pointer-events: none;
  max-height: 280px;
  overflow-y: auto;
}

.search-input.active .autocom-box{
  padding: 8px 8px;
  opacity: 1;
  pointer-events: auto;
}

.autocom-box li{
  list-style: none;
  padding: 8px 12px;
  display: none;
  width: 280px;
  cursor: default;
  border-radius: 3px;
  background-color: #fff;
  margin: 10px;
  margin-bottom: -30px;
}

.search-input.active .autocom-box li{
  display: block;
}
.autocom-box li:hover{
  background:   #f5f5f5;
}

.search-input .icon{
  position: absolute;
  right: 0px;
  top: 0px;
  height: 55px;
  width: 55px;
  text-align: center;
  line-height: 55px;
  font-size: 20px;
  color: #000;
  cursor: pointer;
  z-index: 99999;
}
</style>
<div class="search-input" style="position: relative;">
    <a href="" target="_blank" hidden></a>
    <input type="text" placeholder="Type To Search..">
    <div class="autocom-box flex" style="position: absolute; z-index: 99999999999; background-color:aliceblue;">

    </div>
</div>
<script>
    const searchWrapper = document.querySelector(".search-input");
    const inputBox = searchWrapper.querySelector("input");
    const suggBox = searchWrapper.querySelector(".autocom-box");
    const icon = searchWrapper.querySelector(".icon");
    let linkTag = searchWrapper.querySelector("a");
    let webLink;

    // if user press any key and release
    inputBox.onkeyup = (e) => {
        let userData = e.target.value; //user enetered data
        let emptyArray = [];
        if (userData) {
            //emptyArray = suggestions.filter((data) => {
            //    //filtering array value and user characters to lowercase and return only those words which are start with user enetered chars
            //    return data.toLocaleLowerCase().startsWith(userData.toLocaleLowerCase());
            //});
            //emptyArray = emptyArray.map((data) => {
            //    // passing return data inside li tag
            //    return data = '<li>' + data + '</li>';
            //});
            searchWrapper.classList.add("active"); //show autocomplete box
            showSuggestions(emptyArray);
            let allList = suggBox.querySelectorAll("li");
            for (let i = 0; i < allList.length; i++) {
                //adding onclick attribute in all li tag
                allList[i].setAttribute("onclick", "select(this)");
            }
        } else {
            searchWrapper.classList.remove("active"); //hide autocomplete box
        }
    }

    function select(element) {
        let selectData = element.textContent;
        inputBox.value = selectData;
        icon.onclick = () => {
            webLink = "https://www.google.com/search?q=" + selectData;
            linkTag.setAttribute("href", webLink);
            linkTag.click();
        }
        searchWrapper.classList.remove("active");
    }

    function showSuggestions(list) {
        let listData;
        if (!list.length) {
            userValue = inputBox.value;
            $.ajax({
                url: "/Products/SearchProduct",
                type: "POST",
                dataType: "json",
                data: { keyword: userValue },
                success: function (response) {
                    console.log(response);
                        if (response.length > 0) {
                        listData = response.map((data) => {
                            // passing return data inside li tag
                            return data = '<table style="width:100%"><tr><td><img src="' + data.image + '" style="width:50px;height:50px"></td><td><button onclick="product_detail(' + data.product_id + ')">' + data.product_name + '</button></td></tr></table>';
                        });
                            console.log(listData);
                            suggBox.innerHTML = listData;
                    } else {
                        listData = '<li>No Record Found</li>';
                    }
                }
            });
        } else {
            listData = list.join('');
        }
    }

    function product_detail(id) {
        window.location.href = "/Products/ProductDetail/" + id;
    }

</script>